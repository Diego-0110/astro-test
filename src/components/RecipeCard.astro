---
import Card from "./Card.astro";
import { PorcionIcon, TimeIcon } from './icons.jsx'
const {post} = Astro.props
---

<Card>
  <a href={post.url}>
    <img class="cover" src={post.frontmatter.cover} alt="cover" height="200">
  </a>
  <h3 class="title">
    <a href={post.url}>{post.frontmatter.title}</a>
  </h3>
  <div class="info">
    <span>
      {post.frontmatter.porcions}
      <PorcionIcon width={18} />
    </span>
    <span>
      {post.frontmatter.time}m
      <TimeIcon width={18} />
    </span>
  </div>
</Card>

<style>
  .cover {
    width: 100%;
    object-fit: cover;
    border-radius: 8px;
  }
  .title > a {
    text-decoration: none;
    color: inherit;
  }
  .title > a:hover {
    text-decoration: underline;
  }
  .info {
    display: flex;
    gap: 24px;
    color: var(--muted);
    font-weight: bold;
  }
  .info > * {
    display: flex;
    gap: 4px;
    align-items: center;
  }
</style>